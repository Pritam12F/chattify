generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @unique @id @default(cuid()) //IpAddress of User
  chats     Chat[]
  createdAt DateTime @default(now())
}

model Chat {
  id        String      @unique @id @default(cuid())
  title     String
  messages  Message[]
  userId    String      
  user      User        @relation(fields: [userId], references: [id])
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Message {
  id        String      @unique @id @default(cuid())
  chatId    String
  content   String
  chat      Chat        @relation(fields: [chatId], references: [id])
  role      MessageType
  createdAt DateTime    @default(now())
}

enum MessageType {
  USER
  ASSISSTANT
}